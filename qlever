CACHE_MAX_NUM_ENTRIES          = 100
EOT
    elif [ "$1" == "dblp" ]; then
      DB=dblp
      QLEVERUI_CONFIG=dblp
      read -r -d "" INDEXER_SETTINGS << EOT
DB                = ${DB}
RDF_FILES         = dblp.nt.gz
